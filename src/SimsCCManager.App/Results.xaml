<Window x:Class="SimsCCManager.SortingUIResults.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimsCCManager.SortingUIResults"
        mc:Ignorable="d"
        Title="Results" Height="Auto" Width="Auto" SizeToContent="Manual"
        WindowStartupLocation="CenterOwner">
        <Window.Resources>
            <Style x:Key="ResultsDataGridStyle" TargetType="ListView">
                <Setter Property="Background" Value="#C1C0DE"/>
            </Style>
            <Style x:Key="ResultsRows" TargetType="ListViewItem">
                <Style.Triggers>
                    <Trigger Property="Content" Value="Override">
                        <Setter Property="Background" Value="Red"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <ContextMenu x:Key="cmButton">
                <MenuItem Header="Menu item 1" />
                <MenuItem Header="Menu item 2" />
                <Separator />
                <MenuItem Header="Menu item 3" />
            </ContextMenu>
        </Window.Resources>  

        <Grid Background="#FF231636">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" /> 
            <ColumnDefinition/>   
            <ColumnDefinition Width="10"/> 
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.Column="0"  Background="#FFBABFEC" />
            <Border Grid.Row="1" Grid.Column="0"  Background="#FFBABFEC" />
            <Border Grid.Row="2" Grid.Column="0"  Background="#FFBABFEC" />
            <Border Grid.Row="3" Grid.Column="2"  Background="#FFBABFEC" />
            <Border Grid.Row="1" Grid.Column="2"  Background="#FFBABFEC" />
            <Border Grid.Row="0" Grid.Column="2"  Background="#FFBABFEC" />
            <Border Grid.Row="2" Grid.Column="1"  Background="#FFBABFEC" />
                  
            <StackPanel x:Name="MenuBar" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" Grid.Row="1">
                <Button Click="menu_Click" Width="60" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                    <Image Source="img\icons\headline_gears 2d62d7495b01c1a8.png"/>
                </Button>
                <Button Click="Kofi_Click" Width="60" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                    <Image Source="img\ko-fi_logo-2039355488.png"/>
                </Button>
            </StackPanel>                   
            <ListView x:Name="ResultsView" SelectionMode="Extended" Style="{StaticResource ResultsDataGridStyle}" Grid.Column="1" Grid.Row="1" ItemsSource="{Binding Packages}" SelectedItem="{Binding SelectedFileInfo}" IsSynchronizedWithCurrentItem="True" GridViewColumnHeader.Click="ListViewHeader_Click">
            <ListView.ContextMenu> 
                <ContextMenu> 
                    <MenuItem Header="Move File" Command="{Binding MoveFile}"></MenuItem> 
                    <MenuItem Header="Delete" Command="{Binding DeleteFile}"></MenuItem> 
                    <MenuItem Header="Remove a Tag" Command="{Binding RemoveTag}"></MenuItem> 
                    <MenuItem Header="Add a Tag" Command="{Binding AddTag}"></MenuItem> 
                    <MenuItem Header="Merge These" Command="{Binding MergeFiles}"></MenuItem>
                    <MenuItem Header="Unmerge" Command="{Binding UnmergeFiles}"></MenuItem> 
                </ContextMenu> 
            </ListView.ContextMenu> 
                <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding PackageName}" />
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
                <ListView.View>
                    <GridView AllowsColumnReorder="True">
                        <GridViewColumn DisplayMemberBinding="{Binding PackageName}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="PackageName" Click="ListViewHeader_Click">PackageName</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Title}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Title" Click="ListViewHeader_Click">Title</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Type}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Type" Click="ListViewHeader_Click">Type</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Description}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Description" Click="ListViewHeader_Click">Description</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding FileSize}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Size" Click="ListViewHeader_Click">Size</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding GameString}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Game" Click="ListViewHeader_Click">Game</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Function}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Function" Click="ListViewHeader_Click">Function</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding FunctionSubcategory}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="FunctionSubcategory" Click="ListViewHeader_Click">Function Subcategory</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Location}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Location" Click="ListViewHeader_Click">Location</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding InstancesBlobbed}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Instances" Click="ListViewHeader_Click">Instances</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding ComponentsBlobbed}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Components" Click="ListViewHeader_Click">Components</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>                          
                    </GridView>
                </ListView.View>        
            </ListView>
            <Grid Grid.Column="1" VerticalAlignment="Bottom" Margin="15, 15, 0, 10" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Grid.Column="0" VerticalAlignment="Bottom">
                    <TextBlock Text="Current Game: " Foreground="#FF183046"/>
                    <Rectangle Height="10"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                        <Viewbox Height="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <RadioButton x:Name="radioButton_Sims2" GroupName="GameSelect" UseLayoutRounding="True" />
                        </Viewbox>                        
                        <TextBlock Text="Sims 2" Foreground="#FF183046"/>
                    </StackPanel>
                    <Rectangle Height="15"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                        <Viewbox Height="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <RadioButton x:Name="radioButton_Sims3" GroupName="GameSelect" UseLayoutRounding="True" />
                        </Viewbox>                        
                        <TextBlock Text="Sims 3" Foreground="#FF183046"/>
                    </StackPanel>
                    <Rectangle Height="15"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Height="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <RadioButton x:Name="radioButton_Sims4" GroupName="GameSelect" UseLayoutRounding="True"/>
                        </Viewbox>                        
                        <TextBlock Text="Sims 4" Foreground="#FF183046"/>
                    </StackPanel>
                    <Rectangle Height="15"/>
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Height="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <RadioButton x:Name="radioButton_None" UseLayoutRounding="True" GroupName="GameSelect" IsChecked="True"/>
                        </Viewbox>                        
                        <TextBlock Text="None" Foreground="#FF183046"/>
                    </StackPanel>
                    <Rectangle Height="15"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="2" VerticalAlignment="Center">
                    <Button Name="ShowAllBt" Content="Show All Files" Click="showallfiles_Click" FontSize="14" Padding="4" Margin="0, 0, 0, 10"/>
                    <Button Content="Fix Load Errors" Click="loadErrorFix_Click" FontSize="14" Padding="4"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="3" VerticalAlignment="Center">
                    <TextBlock Text="Search" Margin="25, 0, 0, 5"/>
                    <TextBox Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" Foreground="#FF372C42" Background="#FFCCD3DA" Margin="20, 0, 0, 0"/>
                </StackPanel>
                
            </Grid>
            
        </Grid> 
        
</Window>
