<Application x:Class="SimsCCManager.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimsCCManager.App"
             StartupUri="SplashScreen.xaml">
        <Application.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="themes/Toolbar.xaml" />
                    <ResourceDictionary Source="themes/ResultsView/GridStyle.xaml" />
                    <ResourceDictionary Source="themes/ResultsView/ListStyle.xaml" />
                    <ResourceDictionary Source="themes/Palette.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Application.Resources>
</Application>
