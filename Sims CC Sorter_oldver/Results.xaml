        Title="Results" Height="450" Width="400">
        <Grid Background="#FF231636">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/> 
            <ColumnDefinition Width="Auto"/>   
            </Grid.ColumnDefinitions>
                  
